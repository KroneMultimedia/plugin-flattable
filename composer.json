{
  "name": "wordpress/plugin-flattable",
  "type": "wordpress-plugin",
  "support": {
    "src": "http://gitlab.krone.at/WordPress/plugin-flattable"
  },
  "extra": {
    "installer-name": "kmm-flattable"
  },
  "require": {
    "php": ">=7.0.0",
    "composer/installers": "~1.0"
  },
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "scripts": {
          "phpstan": "vendor/bin/phpstan analyse src test --level 7 -c phpstan.neon",
          "cs-check": "vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
          "cs-fix": "vendor/bin/php-cs-fixer fix --verbose --diff"
      },
  "config": {
    "gitlab-domains": ["gitlab.krone.at"],
    "github-protocols": ["https"],
    "secure-http": false
  },
  "require-dev": {
    "php-mock/php-mock": "^2.0",
    "friendsofphp/php-cs-fixer": "^2.11",
    "phpstan/phpstan": "^0.9.2",
    "phpstan/phpstan-phpunit": "^0.9.4",
    "phpunit/phpunit": "7.*",
    "scrutinizer/ocular": "^1.5"
  }
}
